<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCocktail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cocktailImg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/cocktailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="30sp"
                app:layout_constraintLeft_toRightOf="@+id/cocktailImg"
                app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/glassTitle"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/cocktailImg"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/drinkCategory"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/glassTitle"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/drinkIBA"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/drinkCategory"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/ingredientTitle"
        android:text="@string/liste_des_ingredients"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/cardViewCocktail" />

    <ListView
        android:id="@+id/lstIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>